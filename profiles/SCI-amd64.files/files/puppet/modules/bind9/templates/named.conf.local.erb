include "/etc/bind/keys";

zone "<%= domain %>" in {
 type master;
 file "/etc/bind/master/<%= domain %>";
 allow-query    { any; };
 allow-update{ key DHCP_UPDATE; };
};

zone 168.192.in-addr.arpa in {
 type master;
 file "/etc/bind/master/in-addr";
 allow-query    { any; };
 allow-update{ key DHCP_UPDATE; };
};
